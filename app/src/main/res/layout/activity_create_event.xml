<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="lite.organizer.mtg.harlequin.com.hedronalignment.CreateEvent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatEditText
            android:inputType="textCapSentences"
            android:padding="10dp"
            android:id="@+id/nomeTaglio"
            android:hint="Nome Taglio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/imagebutton"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
        <ImageView
            android:id="@+id/imageSample"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatButton
        android:layout_alignParentBottom="true"
        android:id="@+id/submit"
        android:text="Aggiungi Taglio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
